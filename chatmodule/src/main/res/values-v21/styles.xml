<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TelegramEditText">
        <item name="colorControlNormal">@color/rsc_bottom_panel_accent</item>
        <item name="colorControlActivated">@color/rsc_bottom_panel_accent</item>
        <item name="colorControlHighlight">@color/rsc_bottom_panel_accent</item>
        <item name="android:textColorHint">@color/rsc_bottom_panel_accent</item>
        <item name="android:textColor">#000</item>
        <item name="android:backgroundTint">@color/rsc_bottom_panel_bkg</item>
    </style>
</resources>
