<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTelegram</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTelegram</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryTelegram</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTelegram</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TelegramEditText">
        <item name="colorControlNormal">@color/rsc_bottom_panel_accent</item>
        <item name="colorControlActivated">@color/rsc_bottom_panel_accent</item>
        <item name="colorControlHighlight">@color/rsc_bottom_panel_accent</item>
        <item name="android:textColorHint">@color/rsc_bottom_panel_accent</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
